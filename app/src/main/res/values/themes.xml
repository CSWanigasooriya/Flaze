<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/material_white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Flaze</item>
    </style>



    <!-- Base application theme. -->
    <style name="Theme.Flaze" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_cyan900</item>
        <item name="colorPrimaryVariant">@color/material_cyan800</item>
        <item name="colorOnPrimary">@color/material_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_teal100</item>
        <item name="colorSecondaryVariant">@color/material_teal100</item>
        <item name="colorOnSecondary">@color/material_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Flaze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flaze.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flaze.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>